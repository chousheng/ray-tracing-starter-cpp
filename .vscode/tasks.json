{
    "tasks": [
        {
            "label": "Build debug",
            "type": "cppbuild",
            "command": "make",
            "args": ["build-debug"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build the debug binary."
        },
        {
            "label": "Build release",
            "type": "cppbuild",
            "command": "make",
            "args": ["build-release"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task to build the release binary."
        }
    ],
    "version": "2.0.0"
}
